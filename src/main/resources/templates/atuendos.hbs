{{#partial "contenido"}}

    <div class="container-fluid">

        <div class="row">

            {{#if this}}
                {{#each this}}
                    <div class="card-deck col-sm-4">
                        <div class="card mx-3 my-3">
                            <h5 class="card-header">{{atuendo.descripcion}}</h5>

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Evento: {{evento.titulo}}</li>
                                {{#if atuendo.calificacion}}
                                    <li class="list-group-item">Calificaci√≥n global: {{atuendo.calificacion.calificacionGlobal.descripcion}}</li>
                                {{/if}}
                            </ul>
                            {{#unless atuendo.calificacion}}
                                <a class="btn btn-info" href="/atuendos/{{atuendo.id}}/calificaciones">Calificar</a>
                            {{/unless}}
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="container" style="height: 250px;">
                    <div class="alert alert-dark col-md-4 col-md-offset-4">
                        A&uacute;n no ten&eacute;s atuendos
                    </div>
                </div>
            {{/if}}
        </div>
    </div>

{{/partial}}

{{>layout.hbs}}