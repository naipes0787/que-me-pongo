{{#partial "contenido"}}

    <h2 class="titulo-pagina">
        Usuario: {{ username }}
    </h2>
    <div class="container-fluid">

        <div class="row">
            {{#each guardarropas}}
                <div class="card-deck col-sm-4">
                    <div class="card mx-3 my-3">
                        <div class="card-body">
                            <a class="btn btn-info" href="/guardarropas/{{id}}/prendas">
                                <h2>{{nombre}}</h2>
                            </a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

{{/partial}}

{{>layout.hbs}}