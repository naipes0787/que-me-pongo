
{{#partial "contenido"}}

        <div class="row">
            <div class="jumbotron titulo-menu" style="width:100%">
              <h2>Login</h2>
            </div>
            <div class="row" style="justify-content: center;width: 100%;">
                <form action="/login" method="post" class="form-group col-md-4">
                    {{#if wrongUser}}
                        <div class="alert alert-danger" role="alert">
                            El usuario o la contrase&ntilde;a son inv&aacute;lidos
                        </div>
                    {{/if}}
                    <div class="form-group">
                        <label for="usuario" class="col-sm-2 control-label">
                            Usuario:
                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" type="input" autofocus="autofocus" required="required" name="usuario" id="usuario">
                        </div>
                        <label for="contrasenia" class="col-sm-2 control-label">
                            Contrase&ntilde;a:
                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" type="password" required="required" name="contrasenia" id="contrasenia">
                        </div>
                        <div class="col-sm-12">
                            <input class="btn w-100 my-3 btn-lg btn-primary" type="submit" value="Ingresar">
                        </div>
                    </div>
                </form>
            </div>
        </div>

{{/partial}}

{{>layout.hbs}}
